# ---------------------------------------------------------
# Required Core Settings
# ---------------------------------------------------------

# Generate a random secret (e.g., using `openssl rand -base64 32`)
AUTH_SECRET=lxEzJ1MnWLvz+JW2KhlijsBDVpbUv1SM2YDru8V3RJc=
# Domain where the site is hosted (e.g., photos.yourdomain.com)
NEXT_PUBLIC_DOMAIN=
# Admin credentials for /admin
ADMIN_EMAIL=
ADMIN_PASSWORD=

# ---------------------------------------------------------
# Database Settings
# ---------------------------------------------------------

# PostgreSQL connection string
# Format: postgres://baseuser:password@hostname:port/database
POSTGRES_URL=
# Set to 1 if your database doesn't support/require SSL (common for local/NAS)
DISABLE_POSTGRES_SSL=0

# ---------------------------------------------------------
# Storage Settings (Pick ONE provider)
# ---------------------------------------------------------

# Use 'minio', 'aws-s3', 'cloudflare-r2', or 'vercel-blob'
NEXT_PUBLIC_STORAGE_PREFERENCE=minio

# MinIO Settings (Self-hosted)
NEXT_PUBLIC_MINIO_BUCKET=
NEXT_PUBLIC_MINIO_DOMAIN=
NEXT_PUBLIC_MINIO_PORT=
NEXT_PUBLIC_MINIO_DISABLE_SSL=1
MINIO_ACCESS_KEY=
MINIO_SECRET_ACCESS_KEY=

# AWS S3 Settings
# NEXT_PUBLIC_AWS_S3_BUCKET=
# NEXT_PUBLIC_AWS_S3_REGION=
# AWS_S3_ACCESS_KEY=
# AWS_S3_SECRET_ACCESS_KEY=

# Cloudflare R2 Settings
# NEXT_PUBLIC_CLOUDFLARE_R2_BUCKET=
# NEXT_PUBLIC_CLOUDFLARE_R2_ACCOUNT_ID=
# NEXT_PUBLIC_CLOUDFLARE_R2_PUBLIC_DOMAIN=
# CLOUDFLARE_R2_ACCESS_KEY=
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=

# ---------------------------------------------------------
# Optional Customization
# ---------------------------------------------------------

# Site Title & Description
NEXT_PUBLIC_META_TITLE="My Photo Blog"
NEXT_PUBLIC_META_DESCRIPTION="A collection of my favorite photos."

# Language (e.g., zh-cn, en-us)
NEXT_PUBLIC_LOCALE=zh-cn

# Enable AI generation (requires OpenAI key)
# OPENAI_SECRET_KEY=
# OPENAI_MODEL=gpt-4o

# Map Settings (if using location metadata)
# GOOGLE_PLACES_API_KEY=
